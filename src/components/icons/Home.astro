---
export type Props = {
	size?: 'xs' | 'sm' | 'md' | 'lg';
};

const sizeToPx = {
	xs: '20',
	sm: '24',
	md: '32',
	lg: '48',
};

const { size = 'xs' } = Astro.props;
---

<span class="flex items-center justify-center">
	<!-- Outline Icon fluent:home-32-regular -->
	<svg
		class="group-aria-[current='true']:hidden"
		xmlns="http://www.w3.org/2000/svg"
		width={sizeToPx[size]}
		height={sizeToPx[size]}
		viewBox="0 0 32 32"
	>
		<path
			fill="currentColor"
			d="M16.81 4.3a1.25 1.25 0 0 0-1.62 0l-9.75 8.288a1.25 1.25 0 0 0-.44.953V26.5a.5.5 0 0 0 .5.5h5a.5.5 0 0 0 .5-.5v-7a2.5 2.5 0 0 1 2.5-2.5h5.004a2.5 2.5 0 0 1 2.5 2.5v7a.5.5 0 0 0 .5.5H26.5a.5.5 0 0 0 .5-.5V13.54a1.25 1.25 0 0 0-.44-.952l-9.75-8.287Zm-2.915-1.523a3.25 3.25 0 0 1 4.21 0l9.75 8.287A3.25 3.25 0 0 1 29 13.54V26.5a2.5 2.5 0 0 1-2.5 2.5h-4.996a2.5 2.5 0 0 1-2.5-2.5v-7a.5.5 0 0 0-.5-.5H13.5a.5.5 0 0 0-.5.5v7a2.5 2.5 0 0 1-2.5 2.5h-5A2.5 2.5 0 0 1 3 26.5V13.54a3.25 3.25 0 0 1 1.145-2.476l9.75-8.287Z"
		></path>
	</svg>
	<!-- Solid Icon fluent:home-32-filled -->
	<svg
		class="hidden group-aria-[current='true']:block"
		xmlns="http://www.w3.org/2000/svg"
		width={sizeToPx[size]}
		height={sizeToPx[size]}
		viewBox="0 0 32 32"
		><path
			fill="currentColor"
			d="M13.895 2.777a3.25 3.25 0 0 1 4.21 0l9.75 8.287A3.25 3.25 0 0 1 29 13.54V26.5a2.5 2.5 0 0 1-2.5 2.5h-4a2.5 2.5 0 0 1-2.5-2.5V20a2 2 0 0 0-1.991-2H13.99A2 2 0 0 0 12 20v6.5A2.5 2.5 0 0 1 9.5 29h-4A2.5 2.5 0 0 1 3 26.5V13.54a3.25 3.25 0 0 1 1.145-2.476l9.75-8.287Z"
		></path></svg
	>
</span>
