---
import YogaLayout from "../../layouts/YogaLayout.astro";
import PracticeCard from "../../components/PracticeCard.astro";
import { getCollection } from "astro:content";

const practices = (await getCollection("practices")).filter(
  (practice) => practice.data.visible,
);
---

<YogaLayout
  title="Guided Practices"
  description="Explore our guided meditation and breathwork practices"
>
  <main class="flex mt-8 sm:mt-0 w-full max-w-4xl flex-col gap-8">
    <!-- Hero Section -->
    <section class="text-center py-8">
      <h1 class="text-4xl md:text-5xl font-bold text-amber-950 dark:text-amber-50 mb-4">
        Guided Practices
      </h1>
      <p class="text-lg text-amber-700 dark:text-amber-300">
        Discover meditation, breathwork, and mindfulness practices for your daily wellness
      </p>
    </section>

    <!-- Practice Types Info -->
    <section class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
      {Array.from(new Set(practices.map((p) => p.data.type))).map((type) => (
        <div class="rounded-lg bg-amber-100 dark:bg-amber-900/40 p-4">
          <p class="font-bold text-amber-700 dark:text-amber-300">
            {practices.filter((p) => p.data.type === type).length}
          </p>
          <p class="text-xs text-amber-700 dark:text-amber-300 capitalize">
            {type}
          </p>
        </div>
      ))}
    </section>

    <!-- Practices Grid -->
    <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {practices.map((practice) => (
        <div id={practice.id}>
          <PracticeCard
            title={practice.data.title}
            description={practice.data.description}
            duration={practice.data.duration}
            type={practice.data.type}
            difficulty={practice.data.difficulty}
            tags={practice.data.tags}
            audioUrl={practice.data.audioUrl}
            videoUrl={practice.data.videoUrl}
          />
        </div>
      ))}
    </section>

    {practices.length === 0 && (
      <section class="text-center py-12">
        <p class="text-lg text-amber-700 dark:text-amber-300">
          No practices available at the moment. Check back soon!
        </p>
      </section>
    )}

    <!-- How to Practice Section -->
    <section class="rounded-lg border-2 border-amber-200 dark:border-amber-700 bg-white dark:bg-amber-900/30 p-8">
      <h2 class="text-2xl font-bold text-amber-950 dark:text-amber-50 mb-4">
        How to Practice
      </h2>
      <div class="space-y-3 text-amber-800 dark:text-amber-200">
        <p>• <strong>Find a quiet space</strong> where you won't be disturbed</p>
        <p>• <strong>Choose a practice</strong> that suits your current needs and time</p>
        <p>• <strong>Sit comfortably</strong> or lie down, whatever feels right for you</p>
        <p>• <strong>Follow along</strong> with the guidance at your own pace</p>
        <p>• <strong>Practice regularly</strong> to experience deeper benefits</p>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="rounded-lg bg-gradient-to-r from-amber-500 to-amber-600 dark:from-amber-700 dark:to-amber-800 p-8 text-white text-center">
      <h2 class="text-2xl font-bold mb-4">
        Join Our Practice Community
      </h2>
      <p class="mb-6">
        Get guidance on choosing the right practice for your needs.
      </p>
      <a
        href="/contact"
        class="inline-block px-6 py-3 bg-white text-amber-600 rounded-lg font-semibold hover:bg-amber-50 transition-colors"
      >
        Reach Out
      </a>
    </section>
  </main>
</YogaLayout>
