---
export interface Props {
  title: string;
  description: string;
  duration: number;
  type: string;
  difficulty: "easy" | "moderate" | "challenging";
  tags?: string[];
  audioUrl?: string;
  videoUrl?: string;
}

const { title, description, duration, type, difficulty, tags, audioUrl, videoUrl } = Astro.props;

const difficultyColor = {
  easy: "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200",
  moderate: "bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-200",
  challenging: "bg-rose-100 text-rose-800 dark:bg-rose-900 dark:text-rose-200",
};
---

<div class="rounded-lg border-2 border-amber-200 dark:border-amber-700 bg-white dark:bg-amber-900/30 p-6 hover:shadow-lg transition-shadow">
  <div class="flex items-start justify-between mb-4">
    <div>
      <h3 class="text-xl font-bold text-amber-950 dark:text-amber-50">
        {title}
      </h3>
      <p class="text-sm text-amber-700 dark:text-amber-300 mt-1 capitalize">
        {type}
      </p>
    </div>
    <span class={`px-3 py-1 rounded-full text-xs font-semibold whitespace-nowrap ${difficultyColor[difficulty]}`}>
      {difficulty.charAt(0).toUpperCase() + difficulty.slice(1)}
    </span>
  </div>
  
  <p class="text-amber-800 dark:text-amber-200 mb-4">
    {description}
  </p>

  {(audioUrl || videoUrl) && (
    <div class="flex gap-2 mb-4">
      {audioUrl && (
        <a
          href={audioUrl}
          class="text-xs bg-amber-600 text-white px-3 py-2 rounded hover:bg-amber-700 transition-colors"
        >
          Listen
        </a>
      )}
      {videoUrl && (
        <a
          href={videoUrl}
          class="text-xs bg-amber-600 text-white px-3 py-2 rounded hover:bg-amber-700 transition-colors"
        >
          Watch
        </a>
      )}
    </div>
  )}
  
  <div class="flex items-center justify-between">
    <span class="text-sm text-amber-700 dark:text-amber-300 font-medium">
      {duration} minutes
    </span>
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="text-xs bg-amber-200/50 dark:bg-amber-800/50 text-amber-900 dark:text-amber-100 px-2 py-1 rounded">
            {tag}
          </span>
        ))}
      </div>
    )}
  </div>
</div>
