---
export interface Props {
  title: string;
  description: string;
  githubURL?: string;
  websiteURL?: string;
  tags?: string[];
}

const { title, description, githubURL, websiteURL, tags } = Astro.props;
---

<div class="rounded-lg border-2 border-blue-200 dark:border-blue-700 bg-white dark:bg-blue-900/30 p-6 hover:shadow-lg transition-shadow">
  <h3 class="text-xl font-bold text-slate-950 dark:text-slate-50 mb-3">
    {title}
  </h3>
  
  <p class="text-slate-700 dark:text-slate-300 mb-4">
    {description}
  </p>

  <div class="flex gap-2 mb-4">
    {githubURL && (
      <a
        href={githubURL}
        target="_blank"
        rel="noopener noreferrer"
        class="text-xs bg-slate-900 text-white px-3 py-2 rounded hover:bg-slate-800 transition-colors dark:bg-slate-700 dark:hover:bg-slate-600"
      >
        GitHub
      </a>
    )}
    {websiteURL && (
      <a
        href={websiteURL}
        target="_blank"
        rel="noopener noreferrer"
        class="text-xs bg-blue-600 text-white px-3 py-2 rounded hover:bg-blue-700 transition-colors"
      >
        Visit
      </a>
    )}
  </div>
  
  {tags && tags.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="text-xs bg-blue-100 dark:bg-blue-900/50 text-blue-900 dark:text-blue-200 px-2 py-1 rounded">
          {tag}
        </span>
      ))}
    </div>
  )}
</div>
